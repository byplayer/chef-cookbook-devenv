[alias]
	co = checkout
	br = branch
	mg = merge
	stat = status
	st = status
	ds = diff --stat
	sm = submodule
	ci = commit
	cia = commit --amend
	l = ! git log --color | emojify | less
	lo = ! git log --oneline --color | emojify | less
	lg = ! git log --graph --pretty=format:'%C(yellow)%h%C(green)%d%Creset %s %Cblue[%ad]%C(bold blue)<<%= '%' %>an>%Creset' --abbrev-commit --date=short --branches --color | emojify | less
	lga = ! git log --graph --pretty=format:'%C(yellow)%h%C(green)%d%Creset %s %Cblue[%ad]%C(bold blue)<<%= '%' %>an>%Creset' --abbrev-commit --date=short --branches --all --color | emojify | less
	dt = difftool
	dc = diff --check
	mt = mergetool
	d = diff
	dw = diff --color-words
	top = rev-parse --show-toplevel
	tags = tag -s
[alias "r"]
	s = remote show
	p = remote prune
	rb = remove-remote-branch
[alias "r.s"]
	o = remote show origin
[alias "r.p"]
	o = remote prune origin
[alias "r.rb"]
	o = remove-remote-branch origin
[push]
	default = simple
[color]
	ui = auto
[credential]
	helper = store
[core]
	whitespace = cr-at-eol
	pager = less -x1,5
	hooksPath = git_hooks
[user]
	name = <%= @git_user_name %>
	email = <%= @git_user_email %>
	signingkey = <%= @git_signing_key %>

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[diff]
  tool = meld
  compactionHeuristic = true

[difftool]
  prompt = false

[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
    keepBackup = false

[mergetool "meld"]
  cmd = meld "$LOCAL" "$BASE" "$REMOTE"
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false
[gpg]
	program = gpg
[commit]
	gpgsign = true
	template = ~/.gitcommit_template.txt
